@model Models.Register;

@{
    Layout = "";
}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Register</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		
		<!-- MATERIAL DESIGN ICONIC FONT -->
		<link rel="stylesheet" href="~/Registration_Form/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

		<!-- STYLE CSS -->
		<link rel="stylesheet" href="~/Registration_Form/css/style.css">
	</head>

	<body>

	<div class="wrapper" style="background-image: url('~/Registration_Form/images/bg-registration-form-1.jpg');">
			<div class="inner">
				<div class="image-holder">
				<img src="~/Registration_Form/images/registration-form-1.jpg" alt="">
				</div>
				<form method="post" asp-action="Registration">
					<h3>Register Yourself</h3>
					<div class="form-group">
						<input asp-for="FName" type="text" placeholder="First Name" class="form-control">
						<input asp-for="LName" type="text" placeholder="Last Name" class="form-control">
					</div>
					<div class="form-wrapper">
						<input asp-for="Email" type="text" placeholder="Email" class="form-control">
						<i class="zmdi zmdi-email"></i>
					</div>
					<div class="form-wrapper">
						<input asp-for="PhoneNumber" type="text" placeholder="Phone Number" class="form-control">
						<i class="zmdi zmdi-phone"></i>
					</div>
					<div class="form-wrapper">
						<input asp-for="Password" type="password" placeholder="Password" class="form-control">
						<i class="zmdi zmdi-lock"></i>
					</div>
					<div class="form-wrapper">
						<input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" class="form-control">
						<i class="zmdi zmdi-lock"></i>
					</div>
					<div class="form-wrapper">
						<input asp-for="Address" type="text" placeholder="Address" class="form-control">
						<i class="zmdi zmdi-home"></i>
					</div>
					<button type="submit">Register
						<i class="zmdi zmdi-arrow-right"></i>
					</button>
					<div class="mx-auto">
						<p>Already have an account?<a asp-controller="Account" asp-action="Login">Login</a></p>
					</div>
					
				</form>
			</div>
		</div>
		
	</body>
</html>
